    <!-- Medical Specialist Views -->

    <!-- List View of Clinics for Specialists -->
    <record id="view_clinic_specialist_list" model="ir.ui.view">
        <field name="name">clinic.specialist.list</field>
        <field name="model">clinic.clinic</field>
